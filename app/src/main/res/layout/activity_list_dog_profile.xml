<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listDogProfileActivity"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/txt_ListDogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Dog Profiles"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_whistle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whistle"
        android:layout_toRightOf="@id/txt_ListDogTitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/txt_whistle"
        android:src="@drawable/dog" />

    <ListView
        android:id="@+id/listDog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ListDogTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        tools:listitem="@layout/list_dog_item" />

    <ImageButton
        android:id="@+id/addDog"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add_button"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Add"
        android:contentDescription="adds a new dog"/>

</RelativeLayout>