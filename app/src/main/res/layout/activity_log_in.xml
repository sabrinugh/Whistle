<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context=".registerActivity">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="252dp"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/aldrich"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in to continue your discovery with Whistle and meet new people! \nIf you don't have an account with us, you can sign up by clicking the 'sign up' button below."
        android:layout_below="@id/login_tv"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/alfa_slab_one"
        android:textColor="#000000"
        android:textSize="13sp"
        />

    <ImageView
        android:id="@+id/dogpic"
        android:layout_width="252dp"
        android:layout_height="350dp"
        android:src="@drawable/dog"
        android:layout_marginTop="20dp"
        android:layout_marginStart="220dp"
        android:layout_below="@id/loginDesc"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="370dp"
        android:layout_marginStart="10dp" >

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="E-mail"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="374dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter email address"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:layout_below="@+id/emailTitle"
            android:autofillHints="" />

        <TextView
            android:id="@+id/passwordtitle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="password"
            android:textColor="#000000"
            android:layout_below="@+id/email"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:layout_below="@+id/passwordtitle"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/password"
            />

    </RelativeLayout>

</RelativeLayout>