<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".registerActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/logintitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textSize="80dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/logindesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logintitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/aclonica"
        android:text="Log in to continue your discovery with Whistle and meet new people!\nIf you don't have an account with us, you can sign up by clicking the 'Sign Up' button below."/>

    <EditText
        android:id="@+id/email"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/logindesc"
        android:hint="Email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:hint="Password" />

    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Log In"
        android:background="@drawable/roundbutton"
        />

    <TextView
        android:id="@+id/noaccounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/aclonica"
        android:text="Don't have an account?" />

    <Button
        android:id="@+id/signup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/noaccounttext"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/roundbutton"
        android:text="SIGN UP"
        />

</RelativeLayout>
